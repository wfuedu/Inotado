<?xml version="1.0"?>
<project name="SchoolChapters" basedir=".">
	<path id="classpath">
		<fileset dir="../lib/mods">
			<include name="*.jar" />
		</fileset>
		<fileset dir="../lib">
			<include name="*.jar" />
			<exclude name="jaxb-impl.jar" />
		</fileset>

	</path>

	<target name="generateSchool">
		<taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask" classpathref="classpath" />

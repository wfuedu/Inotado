<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="edu.wfu.inotado.model.ScRubricCriterionDTO" table="WFU_SC_RUBRIC_CRITERION">
		<id name="id" type="integer" column="ID" />
		<property name="rubricId" type="integer" column="RUBRIC_ID"
			not-null="true" index="IDX_RUBRIC_ID" />
		<property name="name" type="string" length="255" column="NAME" />
		<property name="maxScore" type="double" column="MAX_SCORE" />
		<property name="minScore" type="double" column="MIN_SCORE" />
		<property name="gradable" type="boolean" column="GRADABLE" />
		<property name="createdAt" type="timestamp" column="CREATED_AT" />
		<property name="updatedAt" type="timestamp" column="UPDATED_AT" />
	</class>

</hibernate-mapping>

